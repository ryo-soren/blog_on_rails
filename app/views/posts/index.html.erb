<div class="row m-3">
  <% @posts.each do |post|%>
  <div class="my-3 col-sm-6 col-md-4">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to post.title, post, class:"stretched-link text-decoration-none"%>
        </h4>
        <p class="card-text"><%=post.body%></p>
      </div>
    </div>
  </div>
  <% end %>
</div>